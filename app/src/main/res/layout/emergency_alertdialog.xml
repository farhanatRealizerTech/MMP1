<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/square_background"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="Emergency"
        android:gravity="center"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/gradient_btn_dashboard_rev"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">
            <RadioButton
                android:id="@+id/rd_trouble"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="In Trouble"
                android:buttonTint="@color/secondary_text"
                android:layout_weight="1"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Accident"
                android:buttonTint="@color/secondary_text"
                android:layout_weight="1"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Other"
                android:buttonTint="@color/secondary_text"
                android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_msg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:text="I am In trouble"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:background="@drawable/square_line"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center|top">
        <Button
            android:layout_width="160dp"
            android:layout_height="130dp"

            android:id="@+id/btn_emergency"
            android:textColor="@color/icons"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="50sp"
            android:gravity="top|center"
            android:paddingTop="15dp"
            android:background="@drawable/emergency_button"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/gradient_btn_dashboard"/>
</LinearLayout>
