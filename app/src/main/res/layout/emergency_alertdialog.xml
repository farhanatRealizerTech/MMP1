<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/square_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="Emergency"
            android:gravity="center"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@color/colorPrimaryDark"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/gradient_btn_dashboard_rev"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">
                <RadioButton
                    android:id="@+id/rd_trouble"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="In Trouble"
                    android:textSize="16sp"
                    android:buttonTint="@color/secondary_text"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/rd_accident"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_height="match_parent"
                    android:text="Accident"
                    android:buttonTint="@color/secondary_text"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/rd_other"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Other"
                    android:textSize="16sp"
                    android:buttonTint="@color/secondary_text"
                    android:layout_weight="1"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_msg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:text="I am in trouble.Please help me."
                android:gravity="left"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:textColor="#fff"
                android:background="@drawable/square_line"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center|top">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/list_addEmergncyfrnd"></ListView>
            <Button
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:id="@+id/btn_emergency"
                android:textColor="@color/icons"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="50sp"
                android:gravity="top|center"
                android:paddingTop="15dp"
                android:background="@drawable/emergency_button"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/gradient_btn_dashboard"/>
        </LinearLayout>
    <realizer.com.makemepopular.view.ProgressWheel
        android:id="@+id/loadingemergeny"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:matProg_barColor="#02AEEF"
        app:matProg_progressIndeterminate="true"
        />
</RelativeLayout>
