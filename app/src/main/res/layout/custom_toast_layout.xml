<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:androclass="http://schemas.android.com/apk/res/android"
        android:id="@+id/custom_toast_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        androclass:padding="7dp"
        android:background="@drawable/customtoast_bg_lightblack"
        androclass:alpha="0.5">
        <TextView
            android:id="@+id/custom_toast_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            androclass:gravity="center"
            androclass:textColor="#fff"
            android:text="Please Connect To Internet" />
    </LinearLayout>
</LinearLayout>